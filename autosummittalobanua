-- ⚡ Auto Summit Brutal UI by Ganesha Exploit
-- Final FIX: Tanpa bug duduk, checkpoint lebih akurat

--=== Services ===--
local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local player = Players.LocalPlayer

--=== Checkpoints ===--
local checkpoints = {
    Vector3.new(-739.06, 23.46, 582.03),
    Vector3.new(11.84, 235.38, -211.59),
    Vector3.new(-272.35, 441.51, 1138.29),
    Vector3.new(-88.42, 1058.56, 1954.43),
    Vector3.new(-23.41, 1513.04, 2129.53),
    Vector3.new(-503.27, 1769.35, 2510.01),
    Vector3.new(-3079.68, 3317.34, 3134.89),
    Vector3.new(-3369.05, 4010.81, 3197.62),
    Vector3.new(-3650.31, 5058.53, 3694.24)
}

--=== Notifikasi ===--
local function notify(msg)
    pcall(function()
        StarterGui:SetCore("SendNotification", {
            Title = "Auto Summit by Ganesha Exploit",
            Text = msg,
            Duration = 4
        })
    end)
end

--=== Brutal Teleport ===--
local function brutalTeleport(hrp, targetPos)
    if not hrp then return end
    -- langsung snap ke posisi + kecil offset supaya kena checkpoint
    hrp.CFrame = CFrame.new(targetPos + Vector3.new(0, 3, 0))
    task.wait(0.15) -- kasih jeda biar server hitbox checkpoint sempat register
    hrp.CFrame = CFrame.new(targetPos) -- turun tepat ke checkpoint
end

--=== Variabel kontrol ===--
local autoSummitEnabled = false
local loopCount = 0

--=== Loop utama ===--
task.spawn(function()
    while true do
        if autoSummitEnabled then
            local char = player.Character or player.CharacterAdded:Wait()
            local hrp = char:WaitForChild("HumanoidRootPart")
            local hum = char:WaitForChild("Humanoid")

            for i, pos in ipairs(checkpoints) do
                if not autoSummitEnabled then break end
                brutalTeleport(hrp, pos)
                task.wait(0.5) -- delay antar checkpoint

                if i == #checkpoints then
                    task.wait(3) -- summit terakhir sebelum reset
                    hum.Health = 0
                    player.CharacterAdded:Wait():WaitForChild("HumanoidRootPart")
                    loopCount += 1
                    notify("✅ Loop #" .. loopCount .. " selesai")
                end
            end
        end
        task.wait(0.1)
    end
end)

--=== UI Modern ===--
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local ToggleButton = Instance.new("TextButton")

ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.BackgroundTransparency = 0.2
Frame.BorderSizePixel = 0
Frame.Position = UDim2.new(0.05, 0, 0.2, 0)
Frame.Size = UDim2.new(0, 180, 0, 60)
Frame.Active = true
Frame.Draggable = true

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 12)

ToggleButton.Parent = Frame
ToggleButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ToggleButton.Size = UDim2.new(1, -10, 1, -10)
ToggleButton.Position = UDim2.new(0, 5, 0, 5)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.Text = "Auto Summit: OFF"
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.TextSize = 16

local UICornerBtn = Instance.new("UICorner", ToggleButton)
UICornerBtn.CornerRadius = UDim.new(0, 10)

ToggleButton.MouseButton1Click:Connect(function()
    autoSummitEnabled = not autoSummitEnabled
    if autoSummitEnabled then
        ToggleButton.Text = "Auto Summit: ON"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 170, 85)
        notify("⚡ Auto Summit Aktif")
    else
        ToggleButton.Text = "Auto Summit: OFF"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
        notify("⛔ Auto Summit Nonaktif")
    end
end)
